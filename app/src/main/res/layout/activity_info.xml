<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Info">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/infobg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:background="@drawable/bgnavbar">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TENTANG"
                    android:fontFamily="serif-monospace"
                    android:textSize="30dp"
                    android:textColor="#ffff"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp" />

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/TENTANGAPLIKASI"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/glogoaplikasi"
                        android:layout_width="match_parent"
                        android:layout_height="225dp"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logoaplikasi" />

                    <TextView
                        android:id="@+id/judulaplikasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/glogoaplikasi"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:text="Tentang Aplikasi"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:fontFamily="casual"
                        android:textSize="25dp"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/TENTANGPEMBUAT"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/gfotopembuat"
                        android:layout_width="match_parent"
                        android:layout_height="225dp"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pembuat" />

                    <TextView
                        android:id="@+id/judulpembuat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/gfotopembuat"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:text="Tentang Pembuat"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:fontFamily="casual"
                        android:textSize="25dp"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

</LinearLayout>