            </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                android:id="@+id/WISATA"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="22dp">

                <RelativeLayout
                    android:layout_width="match_parent"
